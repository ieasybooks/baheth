<%= simple_form_for(@medium, url: @medium.persisted? ? admin_medium_path : admin_media_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :duration, as: :integer %>
    <%= f.input :link %>
    <%= f.input :source, collection: Medium::SOURCES, include_blank: false %>
    <%= f.input :producer, collection: Medium::PRODUCERS, include_blank: false %>
    <%= f.input :provider %>
    <%= f.input :transcript_txt, as: :file, input_html: { accept: 'text/plain' } %>
    <%= f.input :tag_list, input_html: { value: f.object.tag_list.join(t('joiner')) } %>
    <%= f.input :hidden %>
    <%= f.association :playlist, prompt: :translate %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-outline-primary' %>
  </div>
<% end %>
