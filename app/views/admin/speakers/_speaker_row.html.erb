<tr class="align-middle">
  <th scope="row"><%= record.id %></th>
  <td><%= link_to record.name, admin_speaker_path(record) %></td>
  <td><%= tags_to_links(record).join(t('joiner')).html_safe %></td>
  <td><%= (record.hidden ? '<i class="bi bi-x-circle-fill text-danger fs-4"></i>' : '<i class="bi bi-check-circle-fill text-success fs-4"></i>').html_safe %></td>
  <td><%= record.user.name %></td>
  <td><%= local_time record.created_at, :long %></td>
  <td><%= local_time record.updated_at, :long %></td>
  <td><%= link_to '<i class="bi bi-pencil-fill"></i>'.html_safe, edit_admin_speaker_path(record), class: 'btn btn-sm btn-outline-success' %></td>
  <td>
    <%= link_to '<i class="bi bi-trash-fill"></i>'.html_safe,
      admin_speaker_path(record),
      method: :delete,
      data: {
        confirm: t('are_you_sure'),
        turbo_method: :delete,
        turbo_confirm: t('are_you_sure')
      },
      class: 'btn btn-sm btn-outline-danger' %>
  </td>
</tr>
